<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kompatscher.jan.intervaltimer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.PrGraphActivity"></activity>
        <activity
            android:name=".Activity.WorkoutPopActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name=".Activity.CreateExerciseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Timer.TimerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Timer.WellDoneActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_well_done"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Activity.SaveExercisePresetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ExercisePresetsListActivity"
            android:label="@string/title_activity_presets"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SaveWorkoutActivity"
            android:label="@string/title_activity_create_workout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.WorkoutsListActivity" />
        <activity android:name=".Activity.ExerciseInWorkoutActivity" />
    </application>

</manifest>