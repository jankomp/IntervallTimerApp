<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black_overlay">

    <Button
        android:id="@+id/moveButton"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_toStartOf="@+id/startButton"
        android:layout_toLeftOf="@+id/startButton"
        android:layout_toEndOf="@+id/deleteButton"
        android:layout_toRightOf="@+id/deleteButton"
        android:background="@android:color/black"
        android:drawableTop="@android:drawable/arrow_up_float"
        android:drawableBottom="@android:drawable/arrow_down_float" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="282dp"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_toStartOf="@+id/startButton"
        android:layout_toLeftOf="@+id/startButton"
        android:background="@android:color/holo_red_dark"
        android:text="X" />

    <TextView
        android:id="@+id/workTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:text="Work:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/workTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_alignBottom="@+id/workTextView"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/workTextView"
        android:layout_toRightOf="@+id/workTextView"
        android:text="00:00:00"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/breakTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/workTimeTextView"
        android:layout_toRightOf="@+id/workTimeTextView"
        android:text="Break:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/breakTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/breakTextView"
        android:layout_toRightOf="@+id/breakTextView"
        android:text="00:00:00"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/setsTextView"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/workTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="149dp"
        android:layout_marginRight="149dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/breakTimeTextView"
        android:layout_toRightOf="@+id/breakTimeTextView"
        android:text="Sets:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/setNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/nameTextView"
        android:layout_alignBottom="@+id/workTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="142dp"
        android:layout_marginRight="142dp"
        android:layout_marginBottom="3dp"
        android:text="1"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="6dp"
        android:text="presetName"
        android:textColor="@android:color/black" />

</RelativeLayout>